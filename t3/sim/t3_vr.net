.control

set hcopypscolor=0
set color0=white
set color1=black
set color2=red
set color3=blue
set color4=violet
set color5=rgb:3/8/0
set color6=rgb:4/0/0

******************************************
* analise no tempo
tran 1e-5 4.9975 4.7975
plot v(q)

meas tran vavg AVG v(q) from=4.7975 to=4.9975
meas tran vmax MAX v(q) from=4.7975 to=4.9975
meas tran vmin MIN v(q) from=4.7975 to=4.9975

print vavg-12
print vmax-vmin
print 1/(((12-12)+(vmax-vmin)+1u)*(0.1*(19+4)+15+15+10+10+4+4))

******************************************
hardcopy gr1.ps v(q)
echo gr1_FIG
hardcopy gr2.ps v(q) xlo=4.7975 xhi=4.9975
echo gr2_FIG

.endc
